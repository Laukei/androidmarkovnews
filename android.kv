MyScreenManager:
	FirstScreen:

<FirstScreen>
	name: 'first'
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Skim Read News'
			font_size: 120
			size_hint_y: None
			height: 150
		Label:
			id: update_time
			text: 'updated:'
			font_size: 60		
			size_hint_y: None
			height: 80
		ScrollView:

			Label:
				id: random_number
				text: ''
				font_size: 80
				text_size: self.size
				#height: self.texture_size[1]    #this doesn't work for some reason...
		BoxLayout:
			size_hint_y: None
			height: 200
			Button:
				text: 'Download'
				font_size: 80
				on_release: root.update_db()
			Button:
				text: 'Generate'
				font_size: 80
				on_release: root.generate_sentence()
		BoxLayout:
			size_hint_y: None
			height: 200
			Button:
				text: 'Start'
				font_size: 80
				on_release: app.start_service()
			Button:
				text: 'Stop'
				font_size: 80
				on_release: app.stop_service()
		BoxLayout:
			size_hint_y: None
			height: 200
			Button:
				text: 'Settings'
				font_size: 80
				on_release: app.open_settings()